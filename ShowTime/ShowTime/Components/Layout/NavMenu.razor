@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider AuthStateProvider

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">ShowTime</a>
        <ul class="navbar-nav ms-auto flex-row">
            <AuthorizeView>
                <Authorized>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="logout">
                            <span class="bi bi-box-arrow-right" aria-hidden="true"></span> Logout
                        </NavLink>
                    </li>
                </Authorized>
                <NotAuthorized>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="login">
                            <span class="bi bi-box-arrow-in-right" aria-hidden="true"></span> Login
                        </NavLink>
                    </li>
                </NotAuthorized>
            </AuthorizeView>
        </ul>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />
<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <AuthorizeView>
            <Authorized Context="auth">
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="ArtistsPage">
                        <span class="bi bi-people-fill align-middle me-2" aria-hidden="true"></span> Artists
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="festivals">
                        <span class="bi bi-calendar-event-fill align-middle me-2" aria-hidden="true"></span> Festivals
                    </NavLink>
                </div>

                @if (auth.User.IsInRole("User"))
                {
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="bookings">
                            <span class="bi bi-ticket-detailed align-middle me-2" aria-hidden="true"></span> Bookings
                        </NavLink>
                    </div>
                }
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="login">
                        <span class="bi bi-people-fill align-middle me-2" aria-hidden="true"></span> Artists
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="login">
                        <span class="bi bi-calendar-event-fill align-middle me-2" aria-hidden="true"></span> Festivals
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

<style>
    .nav-scrollable {
        height: 100%;
        overflow-y: auto;
    }

    .nav-link .bi {
        font-size: 1.2em;
        vertical-align: middle;
        line-height: 0;
        margin-top: -1px;
    }
</style>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
