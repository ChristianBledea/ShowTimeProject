@using Microsoft.AspNetCore.Components.Authorization

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">ShowTime</a>
        <ul class="navbar-nav ms-auto flex-row">
            <AuthorizeView>
                <Authorized>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="logout">
                            <span class="bi bi-box-arrow-right" aria-hidden="true"></span> Logout
                        </NavLink>
                    </li>
                </Authorized>
                <NotAuthorized>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="login">
                            <span class="bi bi-box-arrow-in-right" aria-hidden="true"></span> Login
                        </NavLink>
                    </li>
                </NotAuthorized>
            </AuthorizeView>
        </ul>
    </div>
</div>
<input type="checkbox" title="Navigation menu" class="navbar-toggler" />
<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <span class="bi bi-house-door-fill" aria-hidden="true"></span> Home
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="weather">
                        <span class="bi bi-list-nested" aria-hidden="true"></span> Weather
                    </NavLink>
                </div>
                <div class="nav-item px-3 mt-3">
                    <span class="nav-section-title">Artist Management</span>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="ArtistsPage">
                        <span class="bi bi-people-fill align-middle me-2" aria-hidden="true"></span> Artists
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="AddArtist">
                        <span class="bi bi-person-plus-fill" aria-hidden="true"></span> Add Artist
                    </NavLink>
                </div>
                <div class="nav-item px-3 mt-3">
                    <span class="nav-section-title">Festivals Management</span>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="festivals">
                        <span class="bi bi-people-fill align-middle me-2" aria-hidden="true"></span> Festivals
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="add-festival">
                        <span class="bi bi-person-plus-fill" aria-hidden="true"></span> Add Festival
                    </NavLink>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="access-denied" Match="NavLinkMatch.All">
                        <span class="bi bi-house-door-fill" aria-hidden="true"></span> Home
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="access-denied">
                        <span class="bi bi-list-nested" aria-hidden="true"></span> Weather
                    </NavLink>
                </div>
                <div class="nav-item px-3 mt-3">
                    <span class="nav-section-title">Artist Management</span>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="access-denied">
                        <span class="bi bi-people-fill align-middle me-2" aria-hidden="true"></span> Artists
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="access-denied">
                        <span class="bi bi-person-plus-fill" aria-hidden="true"></span> Add Artist
                    </NavLink>
                </div>
                <div class="nav-item px-3 mt-3">
                    <span class="nav-section-title">Festivals Management</span>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="access-denied">
                        <span class="bi bi-people-fill align-middle me-2" aria-hidden="true"></span> Festivals
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="access-denied">
                        <span class="bi bi-person-plus-fill" aria-hidden="true"></span> Add Festival
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>
<style>
    .nav-section-title {
        color: #d7d7d7;
        font-size: 0.9rem;
        padding: 0.5rem 0;
        margin-left: 0.5rem;
    }

    .nav-link .bi {
        font-size: 1.2em;
        vertical-align: middle;
        line-height: 0;
        margin-top: -1px;
    }
</style>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">